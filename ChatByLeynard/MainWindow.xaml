<Window x:Class="ChatByLeynard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatByLeynard"
        mc:Ignorable="d"
        Title="Connect to Database" Height="250" Width="400" ResizeMode="CanMinimize" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel>
            <TextBlock Text="server"  VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBox x:Name="serverTextBox"   VerticalAlignment="Top"/>
        <TextBlock Text="DB"  VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBox x:Name="databaseTextBox"   VerticalAlignment="Top"/>
        <TextBlock Text="Login"  VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBox x:Name="usernameTextBox"   VerticalAlignment="Top"/>
        <TextBlock Text="Password"  VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <PasswordBox x:Name="passwordBox"   VerticalAlignment="Top"/>
        </StackPanel>
        <Button Content="Connect" Click="ConnectButton_Click" Width="100" Height="30" Margin="10,170,10,10"/>
    </Grid>
</Window>
